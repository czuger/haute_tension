#main
  #pageContent.col-xs-12
    .list-group
      %h2 Créer un combat
      .list-group-item
        .row.row-separation
          .col-xs-6.col-md-6
            Nom de l'opposant
          .col-xs-6.col-md-2
            Force
          .col-xs-6.col-md-2
            Vie
          .col-xs-6.col-md-2
            Avantage

        = form_for [@adventure, @fight] do
          - 1.upto(5).each do |index|
            .row.row-separation
              .col-xs-6.col-md-6
                = text_field_tag "opponent_#{index}_name", '', class: 'form-control'
              .col-xs-6.col-md-2
                = number_field_tag "opponent_#{index}_strength", '', class: 'form-control'
              .col-xs-6.col-md-2
                = number_field_tag "opponent_#{index}_life", '', class: 'form-control'
              .col-xs-6.col-md-2
                = number_field_tag "opponent_#{index}_adv", '', class: 'form-control'

    .col-md-2
      = submit_tag 'Mettre à jour', class: 'form-control'

  #pageFooter.col-xs-12