#main
  #pageContent.col-xs-12

    .row.mb-2
      - if @fight_result.hero_win
        .col-xs-6.col-md-2
          = image_tag 'icons/blade-drag.svg', class: 'result-icon'
        .col-xs-6.col-md-10
          %h2= "Vous infligez #{@fight_result.hp_loss} à votre adversaire."

      - else
        .col-xs-6.col-md-2
          = image_tag 'icons/dead-head.svg', class: 'result-icon'
        .col-xs-6.col-md-10
          %h2= "Votre adversaire vous inflige #{@fight_result.hp_loss}."


    .list-group.row-separation
      .list-group-item
        .row.row-separation
          .col-xs-6.col-md-6
            Opposant
          .col-xs-6.col-md-1
            Dé 1
          .col-xs-6.col-md-1
            Dé 2
          .col-xs-6.col-md-1
            Force
          .col-xs-6.col-md-1
            Résultat

        .row.row-separation
          .col-xs-6.col-md-6
            Prêtre Jean
          .col-xs-6.col-md-1
            = image_tag( 'dices/' + @hero.rolls[0].to_s + '.svg', class: 'game-log-die' )
          .col-xs-6.col-md-1
            = image_tag( 'dices/' + @hero.rolls[1].to_s + '.svg', class: 'game-log-die' )
          .col-xs-6.col-md-1
            = @hero.force
          .col-xs-6.col-md-1
            = @hero.attack_force

        .row.row-separation
          .col-xs-6.col-md-6
            = @monster.name
          .col-xs-6.col-md-1
            = image_tag( 'dices/' + @monster.rolls[0].to_s + '.svg', class: 'game-log-die' )
          .col-xs-6.col-md-1
            = image_tag( 'dices/' + @monster.rolls[1].to_s + '.svg', class: 'game-log-die' )
          .col-xs-6.col-md-1
            = @monster.force
          .col-xs-6.col-md-1
            = @monster.attack_force

    = link_to 'Continuer', fights_path, class: 'btn btn-secondary', role: 'button',  'aria-disabled' => true

#pageFooter.col-xs-12