.mt-2
  %h2= t('devise.common.sign_in')

.ml-2
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    .form-group.row
      = f.label :email, class: 'col-form-label col-2'
      .col-10
        = f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control'

    .form-group.row
      = f.label :password, class: 'col-form-label col-2'
      .col-10
        = f.password_field :password, autocomplete: 'current-password', class: 'form-control'

    - if devise_mapping.rememberable?
      .custom-control.custom-checkbox
        = f.check_box :remember_me, class: 'custom-control-input'
        = f.label :remember_me, class: 'custom-control-label'

    .mt-3
      = f.submit t('devise.common.connexion'), class: 'btn btn-primary'

  %hr

  .mt-2
    = render 'devise/shared/links'
