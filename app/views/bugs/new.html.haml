#main.container.container-fluid
  #pageContent.col-xs-12

    = render partial: 'adventures/errors', locals: { data: @bug }

    %h2 Aidez nous en nous signalant les bugs.
    = form_for @bug do |bug|
      .row.mt-3
        .col-12.col-lg-3
          Livre
        .col-12.col-lg-9
          = @book.name

      .row.mt-3
        .col-12.col-lg-3
          Page
        .col-12.col-lg-9
          = print_text_summary @page.text&.first, 20

      .row.mt-3
        .col-12.col-lg-3
          Description du bug
        .col-12.col-lg-9
          = bug.text_area :info, size: '60x6'

      = hidden_field_tag( 'bug[page_id]', @page.id )

      .row.mt-3
        .col
          = bug.submit 'Envoyer', class: 'form-control'

    #pageFooter.col-xs-12