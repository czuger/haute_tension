.page-header

  = link_to edit_note_url( @adventure ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-pencil
    = t( '.notes' )

  = link_to adventure_roll_dices_url( adventure_id: @adventure ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-repeat
    = t( '.roll_dices' )

  = link_to inventory_url( @adventure ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-briefcase
    = t( '.inventory' )

  - unless @page.monsters.empty?
    = link_to fight_url( @adventure ), class: 'btn btn-warning' do
      %span.glyphicon.glyphicon-asterisk
      = t( '.fight' )

  %h1= t( '.title' )

.row
  .col-md-2
    %b
      = 'hp : '.capitalize
    = @adventure.hp
    \/
    = @adventure.hp_max

  .col-md-2
    %b
      = 'force : '.capitalize
    = @adventure.strength
    \/
    = @adventure.strength_max

  .col-md-2
    %b
      = 'or : '.capitalize
    = @adventure.gold

  .col-md-2
    %b
      = 'rations : '.capitalize
    = @adventure.rations

  .col-md-2
    %b
      = 'gourdes : '.capitalize
    = @adventure.waterskins
    \/
    = @adventure.waterskins_max

  .col-md-2
    %b
      = 'charisme : '.capitalize
    = @adventure.charisma_avaliable ? 'disponible' : 'utilis√©'

- @page.text.each do |txt|
  %p= raw txt