.page-header
  = link_to adventure_roll_dices_url( adventure_id: @adventure ), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-repeat
    = t( '.roll_dices' )

  = link_to edit_adventure_url( @adventure, edit_typ: :hp, edit_action: :up ), class: 'btn btn-success' do
    %span.glyphicon.glyphicon-heart
    = t( '.earn_life' )

  = link_to edit_adventure_url( @adventure, edit_typ: :hp, edit_action: :down ), class: 'btn btn-danger' do
    %span.glyphicon.glyphicon-heart
    = t( '.loose_life' )

  = link_to edit_adventure_url( @adventure, edit_typ: :gold, edit_action: :up ), class: 'btn btn-success' do
    %span.glyphicon.glyphicon-piggy-bank
    = t( '.earn_gold' )

  = link_to edit_adventure_url( @adventure, edit_typ: :gold, edit_action: :down ), class: 'btn btn-danger' do
    %span.glyphicon.glyphicon-piggy-bank
    = t( '.loose_gold' )

  - unless @page.monsters.empty?
    = link_to fight_url( @adventure ), class: 'btn btn-warning' do
      %span.glyphicon.glyphicon-asterisk
      = t( '.fight' )

  %h1= t( '.title' )

.row
  .col-md-2
    = label_tag 'hp : '
    = @adventure.hp

  .col-md-2
    = label_tag 'or : '
    = @adventure.gold

  .col-md-2
    = label_tag 'rations : '
    = @adventure.rations

  .col-md-2
    = label_tag 'gourdes : '
    = @adventure.gourdes

  .col-md-2
    = label_tag 'charisme : '
    = @adventure.charisme ? 'disponible' : 'utilis√©'

- @page.text.each do |txt|
  %p= raw txt