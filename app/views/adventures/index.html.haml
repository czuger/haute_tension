.page-header
  = link_to new_adventure_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t( '.new' ) + ' ' + 'Aventure'
  %h1= t( '.listing' ) + ' ' + 'adventures'

