.page-header
  = link_to new_adventure_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t( '.new' ) + ' ' + 'Aventure'
  %h1= t( '.listing' ) + ' ' + 'adventures'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Book
        %th Hp
        %th Force
        %th Gold
        %th Gourdes
        %th Gourdes remplies
        %th Rations
        %th Charisme
        %th
        %th
        %th

    %tbody
      - @adventures.each do |adventure|
        %tr
          %td= adventure.book.name
          %td= adventure.hp
          %td= adventure.strength
          %td= adventure.gold
          %td= adventure.waterskins
          %td= adventure.waterskins_max
          %td= adventure.rations
          %td= adventure.charisma_avaliable
          %td= link_to t( '.play' ), adventure_play_path( adventure )
          %td= link_to t( '.show' ), adventure
          -#%td= link_to t( '.new' ), edit_adventure_path(adventure)
          %td= link_to t( '.destroy' ), adventure, data: { confirm: t( '.are_you_sure' ) }, method: :delete
