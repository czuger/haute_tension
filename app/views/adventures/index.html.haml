.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Book
        %th.hidden-xs.hidden-sm Hp
        %th.hidden-xs.hidden-sm Force
        %th.hidden-xs.hidden-sm Gold
        %th.hidden-xs.hidden-sm Gourdes
        %th.hidden-xs.hidden-sm Gourdes remplies
        %th.hidden-xs.hidden-sm Rations
        %th.hidden-xs.hidden-sm Charisme
        %th
        %th.hidden-xs.hidden-sm
        %th.hidden-xs.hidden-sm

    %tbody
      - @adventures.each do |adventure|
        %tr
          %td= adventure.book.name
          %td.hidden-xs.hidden-sm= adventure.hp
          %td.hidden-xs.hidden-sm= adventure.strength
          %td.hidden-xs.hidden-sm= adventure.gold
          %td.hidden-xs.hidden-sm= adventure.waterskins
          %td.hidden-xs.hidden-sm= adventure.waterskins_max
          %td.hidden-xs.hidden-sm= adventure.rations
          %td.hidden-xs.hidden-sm= adventure.charisma_avaliable
          %td= link_to t( '.play' ), adventure_book_url( adventure.id, adventure.page_id )
          %td.hidden-xs.hidden-sm= link_to t( '.show' ), adventure
          -#%td= link_to t( '.new' ), edit_adventure_path(adventure)
          %td.hidden-xs.hidden-sm= link_to t( '.destroy' ), adventure, data: { confirm: t( '.are_you_sure' ) }, method: :delete