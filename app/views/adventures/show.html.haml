
= link_to play_adventures_path, class: 'btn btn-success' do
  %span.glyphicon.glyphicon-play
  = t( '.play' )
= link_to reroll_adventures_path, class: 'btn btn-warning' do
  %span.glyphicon.glyphicon-refresh
  = t( '.reroll' )

%h2= t( '.title' )

%dl.dl-horizontal
  %dt Book:
  %dd= @adventure.book.name
  %dt Hp:
  %dd= @adventure.hp
  %dt Force:
  %dd= @adventure.strength
  %dt Or:
  %dd= @adventure.gold
  %dt Gourdes:
  %dd= @adventure.waterskins
  %dt Gourdes remplies:
  %dd= @adventure.waterskins_max
  %dt Rations:
  %dd= @adventure.rations
  %dt Charisme:
  %dd= @adventure.charisma_avaliable
