.page-header
  = link_to adventure_play_url(@adventure), class: 'btn btn-success' do
    %span.glyphicon.glyphicon-play
    = t( '.play' )
  = link_to adventure_reroll_path(@adventure), class: 'btn btn-warning' do
    %span.glyphicon.glyphicon-refresh
    = t( '.reroll' )

  %h1= t( '.show' ) + ' ' + 'adventure'

%dl.dl-horizontal
  %dt Book:
  %dd= @adventure.book.name
  %dt Hp:
  %dd= @adventure.hp
  %dt Force:
  %dd= @adventure.force
  %dt Gold:
  %dd= @adventure.gold
  %dt Gourdes:
  %dd= @adventure.gourdes
  %dt Gourdes remplies:
  %dd= @adventure.gourdes_remplies
  %dt Rations:
  %dd= @adventure.rations
  %dt Charisme:
  %dd= @adventure.charisme
