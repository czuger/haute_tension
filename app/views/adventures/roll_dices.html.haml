.page-header
  = link_to adventure_play_url( adventure_id: @adventure.id ), class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  %h1= t( '.roll_dice' )

.container

  = t( '.votre_jet' )
  - @dices.rolls.each do |d|
    = image_tag( "dices/#{d}.svg", class: :dice )

