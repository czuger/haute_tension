.page-header
  = link_to pages_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    = t( '.back' )
  = link_to edit_page_path(@page), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    = t( '.edit' )

  %h1= t( '.title' )

- @page.text.each do |txt|
  %p= txt

%ul
  - @page.page_links.each do |pl|
    %li= link_to( pl.text, page_url( pl.dst_page_id ) )
