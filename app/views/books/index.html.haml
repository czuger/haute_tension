.page-header
  = link_to new_book_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t( '.new' ) + ' ' + 'Book'
  %h1= t( '.listing' ) + ' ' + 'books'

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th

    %tbody
      - @books.each do |book|
        %tr
          %td= book.name
          %td= link_to t( '.show' ), book
          %td= link_to t( '.new' ), edit_book_path(book)
          %td= link_to t( '.destroy' ), book, data: { confirm: t( '.are_you_sure' ) }, method: :delete
